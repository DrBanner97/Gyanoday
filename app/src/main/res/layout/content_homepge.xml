<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aj.gyanoday.Homepge"
    tools:showIn="@layout/activity_homepge">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/s" />

    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#311b92"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/a_brief" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homepage_text"
        android:textColor="#ff5722"
        android:textSize="17sp"

        android:layout_below="@+id/textView"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/menu"
        android:layout_below="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1c00f4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/homepage_menu"
        android:textColor="#ffea01"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout1"
    tools:context="com.example.aj.gyanoday.Contact">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:srcCompat="@drawable/cu1s"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@drawable/cl"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textView7"
        android:layout_below="@+id/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ofiice -  9973941944, 9162204158"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:textColor="#fd000000"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        app:srcCompat="@drawable/em"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID- g.r.s.gyanodayschool@gmail.com"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email" />

    <ImageView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:srcCompat="@drawable/wb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView8"
        android:layout_marginBottom="17dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website: www.gyanodayvidyalaya.com"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/web"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_below="@+id/textView10">

        <ImageView
            android:id="@+id/facebook"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_weight="5"
            android:layout_height="60dp"

            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/fb" />

        <ImageView
            android:id="@+id/map"
            android:layout_width="100dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mp"
            />
    </LinearLayout>





</RelativeLayout>
